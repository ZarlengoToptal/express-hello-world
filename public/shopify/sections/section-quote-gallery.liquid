<section class="quote-gallery">
  
  <div class="container-slider">
  	<div class="quote-text fade-quote">
        <h2>{{ section.settings.quote1}}</h2>
    </div>
    <div class="quote-text fade-quote">
        <h2>{{ section.settings.quote2}}</h2>
    </div>
    <div class="quote-text fade-quote">
        <h2>{{ section.settings.quote3}}</h2>
    </div>
    
  </div>
  
  <div class="navigation-logos">
    
  	<div class="quote-image dot" onclick="currentSlide(1)">
      {% if section.settings.logo-image1 %}
      {%- assign logo-image1 = section.settings.logo-image1 | img_url: 'large' -%}
      	<img class="lazyload" alt="{{ section.settings.logo-image1.alt | default: section.settings.logo-image1 }}" src="{{ block.settings.logo-image1 | img_url: 'large' }}" data-src="{{ logo-image1 }}" data-aspectratio="{{ section.settings.logo-image1.aspect_ratio }}" data-sizes="auto" style="width:100%"/>
      {% endif %}
    </div>
    <div class="quote-image dot" onclick="currentSlide(2)">
      {% if section.settings.logo-image2 %}
      {%- assign logo-image2 = section.settings.logo-image2 | img_url: 'large' -%}
      	<img class="lazyload" alt="{{ section.settings.logo-image2.alt | default: section.settings.logo-image2 }}" src="{{ block.settings.logo-image2 | img_url: 'large' }}" data-src="{{ logo-image2 }}" data-aspectratio="{{ section.settings.logo-image2.aspect_ratio }}" data-sizes="auto" style="width:100%"/>
      {% endif %}
    </div>
    <div class="quote-image dot" onclick="currentSlide(3)">
      {% if section.settings.logo-image3 %}
      {%- assign logo-image3 = section.settings.logo-image3 | img_url: 'large' -%}
      	<img class="lazyload" alt="{{ section.settings.logo-image3.alt | default: section.settings.logo-image3 }}" src="{{ block.settings.logo-image3 | img_url: 'large' }}" data-src="{{ logo-image3 }}" data-aspectratio="{{ section.settings.logo-image3.aspect_ratio }}" data-sizes="auto" style="width:100%"/>
      {% endif %}
    </div>
    
  </div>

  
</section>

{% schema %}
  {
    "name": "Quote Gallery",
    "settings": [
		{
          "type": "textarea",
          "id": "quote1",
          "label": "Quote One"
        },
		{
          "type": "image_picker",
          "id": "logo-image1",
          "label": "Logo Image One"
        },
		{
          "type": "textarea",
          "id": "quote2",
          "label": "Quote Two"
        },
		{
          "type": "image_picker",
          "id": "logo-image2",
          "label": "Logo Image Two"
        },
		{
          "type": "textarea",
          "id": "quote3",
          "label": "Quote Three"
        },
		{
          "type": "image_picker",
          "id": "logo-image3",
          "label": "Logo Image Three"
        }
	],
  "presets": [
    {
    "name": "Quote Gallery",
    "category": "ADVANCED LAYOUT"
    }
   ]
  }
{% endschema %}

<script>

var slideIndex = 0;
showSlides();
var slides,dots;

function plusSlides(position) {
    slideIndex += position;
    if (slideIndex > slides.length) {slideIndex = 1}
    else if(slideIndex < 1){slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
       slides[i].style.display = "none";  
    }
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" quote-active", "");

      }
        slides[slideIndex-1].style.display = "block";  
        dots[slideIndex-1].className += " quote-active";
    }

function currentSlide(index) {
    if (index > slides.length) {index = 1}
    else if(index < 1){index = slides.length}
    for (i = 0; i < slides.length; i++) {
       slides[i].style.display = "none";  
    }
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" quote-active", "");
      }
        slides[index-1].style.display = "block";  
        dots[index-1].className += " quote-active";
    }

function showSlides() {
    var i;
    slides = document.getElementsByClassName("quote-text");
    dots = document.getElementsByClassName("dot");
    for (i = 0; i < slides.length; i++) {
       slides[i].style.display = "none";  
    }
    slideIndex++;
    if (slideIndex> slides.length) {slideIndex = 1}    
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" quote-active", "");
    }
    slides[slideIndex-1].style.display = "block";  
    dots[slideIndex-1].className += " quote-active";
    setTimeout(showSlides, 5000); // Change image every 3 seconds
}

</script>