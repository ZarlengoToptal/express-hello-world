<div>
  {% include 'kitsilano-individual-card-details' %}
</div>

{% schema %}
  {
    "name": "Location Cards",
    "settings": [
      {
      "type": "textarea",
      "id": "description-location-header",
      "label": "Subheading",
	  "default": "Banner slogan if you want."
      },
      {
        "type": "select",
        "id": "height",
        "label": "Section height",
        "default": "use_screen_one_half",
        "options": [
        { "value": "use_screen_full", "label": "Full screen height"},
        { "value": "use_screen_two_thirds", "label": "Tall"},
        { "value": "use_screen_one_half", "label": "Medium"},
        { "value": "use_screen_one_third", "label": "Short"},
        { "value": "use_image", "label": "Image height"}
        ]
        },
        {
        "type": "checkbox",
        "id": "parallax",
        "default": false,
        "label": "Enable parallax scroll"
      },
	  {
      "type": "image_picker",
      "id": "kitsilano-banner-image",
      "label": "Banner Image"
      }
	],
  "blocks": [
        {
        "type": "individual-location",
        "name": "Location Details",
        "settings": [
		{
        "type": "html",
        "id": "kitsilano-video",
        "label": "Video for the Location"
        },
        {
        "type": "text",
        "id": "country-kitsilano-individual",
        "label": "Country",
        "default": "Canada"
        },
        {
        "type": "text",
        "id": "title-kitsilano-individual",
        "label": "Fig Bar Location",
        "default": "Fig Bar Location"
        },
        {
        "type": "text",
        "id": "tagline-kitsilano-individual",
        "label": "Tagline",
        "default": "Visit us in our Fig Bars. We'd love to see your face."
        },
		{
        "type": "text",
        "id": "address-kitsilano-individual",
        "label": "Address",
        "default": "2050 W 4TH AVE, VANCOUVER"
        },
		{
        "type": "text",
        "id": "telephone-kitsilano-individual",
        "label": "Telephone Number",
		"default": "604 423 3881"
        }, 
		{
        "type": "textarea",
        "id": "hours-kitsilano-individual",
        "label": "Hours of Operation",
		"default": "MON-SUN 8AMâ€“8PM"
        },
		{
        "type": "url",
        "id": "book-now-kitsilano-individual",
        "label": "Book Now link"
        },
		{
        "type": "html",
        "id": "google-kitsilano-individual",
        "label": "Google Map for the Location"
        },
		{
        "type": "textarea",
        "id": "address-kitsilano-full-description",
        "label": "Directions",
        "default": "2050 W 4th Ave, Vancouver"
        }, 
		{
        "type": "textarea",
        "id": "parking-kitsilano-individual",
        "label": "Parking",
		"default": "None"
        }, 
		{
        "type": "textarea",
        "id": "cancelation-kitsilano-individual",
        "label": "Cancellation",
		"default": "None"
        }, 
		{
        "type": "textarea",
        "id": "accessability-kitsilano-individual",
        "label": "Accessibility",
		"default": "None"
        },
		{
          "type": "image_picker",
          "id": "kitsilano-shop-now-image",
          "label": "Shop Now Image"
        },
		{
        "type": "textarea",
        "id": "kitsilano-shop-now-cta",
        "label": "Shop Now CTA",
		"default": "Clean skin for all skin types"
        },
		{
          "type": "image_picker",
          "id": "kitsilano-services-available-treatments",
          "label": "Treatments Image"
        },
		{
        "type": "textarea",
        "id": "treatments-kitsilano-text",
        "label": "TREATMENTS",
		"default": "Technology driven; guided by resaults."
        },
		{
          "type": "image_picker",
          "id": "kitsilano-services-available-skin-care",
          "label": "Skin Care Image"
        },
		{
        "type": "textarea",
        "id": "kitsilano-skin-care-location-text",
        "label": "SKINCARE",
		"default": "Clean skin care for all skin types."
        },
		{
          "type": "image_picker",
          "id": "kitsilano-services-available-membership",
          "label": "Membership Image"
        },
		{
        "type": "textarea",
        "id": "membership-kitsilano-text",
        "label": "MEMBERSHIP",
		"default": "Love us? Sign up for more."
        }
       ]
	  }
	]
  }
