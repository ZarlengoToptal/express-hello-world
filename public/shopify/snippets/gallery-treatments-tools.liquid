<div
     class="mobile8-slider-wrapper"
     data-section-type="mobile8-slider"
     data-section-id="{{ section.id }}"
     data-slider-dots="true">
  <ul id="Mobile8Slider-{{ section.id }}" class="mobile8-slider">
    {% for product in collections.treatments-tools.products %}
    <li class="essential-mobile8">
      {% include 'product-essential' %}
    </li>
    {% endfor %}
  </ul>
  <script>
  $( document ).ready(function() {
  	$('.mobile8-slider').slick({
      dots: true,
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 1,
      responsive: [
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
  </script>
</div>